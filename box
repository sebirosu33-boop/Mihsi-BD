  <script>
    const dummyImages = [
      "https://wiki.cs.money/_next/static/images/ak-47-714163b7deae61b72d41d3b9c3cd8385.png",
      "https://steamcommunity-a.akamaihd.net/economy/image/-9a81dlWLwJ2UUGcVs_nsVtzdOEdtWwKGZZLQHTxDZ7I56KU0Zwwo4NUX4oFJZEHLbXH5ApeO4YmlhxYQknCRvCo04DEVlxkKgpovbSsLQJf3qr3czxb49KzgL-KmsjxPr7Dl2dV18hwmOvN8IXvjVCLpxo7Oy3tIdLEdgdqNAmBqFa_kO3mh8K9uJqbyiMy7HIn5H3VzUPl1B0dO7M7hOveFwvYitsMFw",
      "https://community.akamai.steamstatic.com/economy/image/-9a81dlWLwJ2UUGcVs_nsVtzdOEdtWwKGZZLQHTxDZ7I56KU0Zwwo4NUX4oFJZEHLbXH5ApeO4YmlhxYQknCRvCo04DEVlxkKgpot621FABz7PLfYQJK9diklb-HnvD8J4Tdl3lW7Ytw3LDD8NWnjFDhrUo5Nj_3cI6dIA9tZ1zQrFLqk7jugMK075WfznowpGB8suOz62BA",
      "https://i.imgur.com/IpEsYSH.png",
      "https://i.imgur.com/oV7FZrX.png",
      "https://i.imgur.com/xzKjzDC.png",
      "https://i.imgur.com/nkZ1V9G.png",
      "https://i.imgur.com/B0SiozN.png",
      "https://i.imgur.com/4Y9kLWy.png"
    ];

    const userImageURL = 'https://topscaune.ro/continut/produse/188154/1000/scaun-gaming-cu-masaj-in-perna-lombara-sezut-benzi-elastice-sustinere-suport-picioare-material-textil-gri-negru_33640.webp';

    const roulette = document.getElementById("roulette");
    const finalImage = document.getElementById("finalImage");
    const winnerText = document.getElementById("winner");

    function startRoulette() {
      const sound = document.getElementById("caseSound");
      sound.currentTime = 0;
      sound.play();

      winnerText.textContent = "";
      finalImage.style.display = "none";

      roulette.innerHTML = "";
      const totalItems = 30;
      const winningIndex = 24;

      for (let i = 0; i < totalItems; i++) {
        const div = document.createElement("div");
        div.classList.add("item");

        const img = document.createElement("img");
        if (i === winningIndex) {
          img.src = userImageURL;
        } else {
          img.src = dummyImages[Math.floor(Math.random() * dummyImages.length)];
        }

        div.appendChild(img);
        roulette.appendChild(div);
      }

      const offset = -(winningIndex * 120) + 300;

      // ResetƒÉm tranzi»õia »ôi transformarea pentru a putea relua anima»õia
      roulette.style.transition = "none";
      roulette.style.transform = "translateX(0)";
      roulette.offsetHeight; // for»õƒÉm reflow

      // SetƒÉm tranzi»õia de 20 secunde
      roulette.style.transition = "transform 20s cubic-bezier(0.1, 0.8, 0.1, 1)";
      roulette.style.transform = `translateX(${offset}px)`;

      // AdƒÉugƒÉm listener pentru finalul anima»õiei
      roulette.addEventListener('transitionend', onTransitionEnd);

      function onTransitionEnd() {
        winnerText.textContent = "üéâ FelicitƒÉri! Ai primit: Gaming Chair Grey";
        finalImage.src = userImageURL;
        finalImage.style.display = "inline-block";

        roulette.removeEventListener('transitionend', onTransitionEnd);
      }
    }
  </script>
